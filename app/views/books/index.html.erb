

<!-- 新規投稿部分 -->
<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book, url: '/books') do |f| %>

  <!-- 投稿・更新時にサクセスメッセージ表示 -->
  <% if flash[:notice] %>
    <div class = "flash">
    <%= flash[:notice] %>
    </div>
  <% end %>

  <!-- エラーメッセージ -->
  <% if flash[:alert] %>
   <div class = "flash">
    <%= flash[:alert] %>
    </div>
  <% end %>

<!-- タイトル記入 -->
<h5>Title</h5>
<%= f.text_field :title %>

<!-- 本文記入 -->
<h5>Opinion</h5>
<%= f.text_area :opinion %>

<br><%= f.submit 'Create Book' %>
<% end %>